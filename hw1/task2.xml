<mujoco>
    <option timestep="0.0002" />
    <actuator>
        <motor gear="10000" joint="hinge_1" name="motor_1" ctrlrange="-10 10" ctrllimited="true"/>
        <motor gear="10000" joint="hinge_4" name="motor_2" ctrlrange="-10 10" ctrllimited="true"/>
    </actuator>
    <asset>
        <material name="blue" rgba="0 0 1 1" />
        <material name="green" rgba="0 1 0 1" />
        <material name="red" rgba="1 0 0 1" />
        <material name="white" rgba="1 1 1 1" />
    </asset>
    <worldbody>
        <!-- <geom type="plane" size="10 10 0.1" pos="-2 0 0" euler="0 90 0" material="white" /> -->
        <light diffuse=".5 .5 .5" pos="0 0 3" dir="0 0 -1" />
        <body name="link_0" pos="0 -5 0" euler="0 90 0">
            <joint name="hinge_0" axis="0 0 1" />
            <geom type="cylinder" size=".5 .5" material="red" />
            <geom type="box" size="1.25 .25 .25" pos="-0.75 0 0" material="white" />
            
            <body name="link_1" pos="-2.5 0 0">
                <joint name="hinge_1" axis="0 0 1" />
                <geom type="cylinder" size=".5 .5" material="green" />
                <geom type="box" size=".25 1.25 .25" pos="0 .75 0" material="white" />
                
                <body name="link_2" pos="0 2.5 0">
                    <joint name="hinge_2" axis="0 0 1" />
                    <geom type="cylinder" size=".5 .5" material="blue" />
                    <geom type="box" size=".25 1.25 .25" pos="0 .75 0" material="white" />
                    
                    <body name="link_3" pos="0 2.5 0">
                        <joint name="hinge_3" axis="0 0 1" />
                        <geom type="cylinder" size=".5 .5" material="green" />
                        <geom type="box" size="1.25 .25 .25" pos=".75 0 0" material="white" />
                        
                        <body name="link_4" pos="2.5 0 0" euler="0 0 0">
                            <joint name="hinge_4" axis="0 0 1" />
                            <geom type="cylinder" size=".5 .5" material="red" />
                        </body>
                    </body>
                </body>
            </body>
        </body>
    </worldbody>

    <equality>
        <connect name="kinematic_link" active="true" body1="link_4" anchor="0 0 0" />
    </equality>

    <contact>
       <exclude body1="link_0" body2="link_1"/>
       <exclude body1="link_0" body2="link_3"/>
       <exclude body1="link_0" body2="link_2"/>
       <exclude body1="link_1" body2="link_3"/>
       <exclude body1="link_1" body2="link_2"/>
       <exclude body1="link_2" body2="link_3"/>
   </contact>


</mujoco>